{
  "name": "baridetta",
  "version": "1.5.0",
  "description": "JavaScript Universal Single Object Validator",
  "main": "./dist/umd/index.js",
  "module": "./dist/es/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn run lint --fix",
    "test": "jest --config ./jest.config.json",
    "test:watch": "yarn run test --watch",
    "build": "yarn run build:merge && yarn run build:modules && yarn run build:minify && yarn run build:doc",
    "build:merge": "node merge-sources.js dist index.ts && node inline-docs.js ./dist/index.ts",
    "build:modules": "concurrently --kill-others-on-fail \"yarn run build:umd\" \"yarn run build:es\" \"yarn run build:types\"",
    "build:minify": "concurrently --kill-others-on-fail \"yarn run build:umd-min\" \"yarn run build:es-min\"",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:umd-min": "terser --config-file ./terser.config.json -o ./dist/umd/index.min.js -- ./dist/umd/index.js",
    "build:es": "tsc -p tsconfig.es.json",
    "build:es-min": "terser --config-file ./terser.config.json -o ./dist/es/index.min.js -- ./dist/es/index.js",
    "build:types": "tsc -p tsconfig.types.json",
    "build:doc": "node generate-markdown.js README.md && doctoc README.md --github",
    "predeploy": "yarn run lint && yarn run test && yarn run build"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MasterSais/baridetta.git"
  },
  "files": [
    "dist/es",
    "dist/types",
    "dist/umd"
  ],
  "keywords": [
    "es6",
    "es2015",
    "baridetta",
    "js",
    "ts",
    "typescript",
    "nodejs",
    "validator",
    "validation"
  ],
  "author": "Yauheni Zhestiannikau (MasterSais) <evgensvvv@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/MasterSais/baridetta",
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "13.9.0",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "concurrently": "5.1.0",
    "doctoc": "1.4.0",
    "eslint": "6.8.0",
    "jest": "25.1.0",
    "terser": "4.6.6",
    "ts-jest": "25.2.1",
    "typescript": "3.8.3"
  },
  "typings": "./dist/types/index.d.ts"
}