{
  "name": "uvo",
  "version": "3.1.0",
  "description": "JavaScript Universal Validation Library",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "unpkg": "./dist/esm/index.min.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "test": "jest --config jest.config.json",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:post": "jest --config post-jest.config.json",
    "build": "yarn build:merge && rollup -c rollup.config.js && yarn build:doc",
    "build:merge": "node config/merge-sources && node config/inline-docs",
    "build:doc": "yarn build:doc:api && yarn build:doc:main",
    "build:doc:api": "node config/prepare-api-doc API.md",
    "build:doc:main": "node config/prepare-main-doc docs/main.md README.md API.md",
    "predeploy": "yarn lint:fix && yarn build && yarn test:post"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MasterSais/uvo.git"
  },
  "files": [
    "dist",
    "template",
    "extended",
    "es5",
    "extended-template"
  ],
  "keywords": [
    "es5",
    "es6",
    "es2015",
    "uvo",
    "js",
    "ts",
    "typescript",
    "nodejs",
    "validator",
    "templating",
    "validation",
    "async"
  ],
  "author": "Yauheni Zhestiannikau (MasterSais) <evgensvvv@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/MasterSais/uvo",
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "7.9.0",
    "@rollup/plugin-typescript": "4.1.1",
    "@types/jest": "25.2.1",
    "@types/node": "13.13.4",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "babel-jest": "25.5.1",
    "eslint": "6.8.0",
    "jest": "25.5.4",
    "rollup": "2.7.6",
    "rollup-plugin-delete": "1.2.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "0.27.0",
    "terser": "4.6.13",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  },
  "typings": "./dist/index.d.ts"
}