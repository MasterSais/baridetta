{
  "name": "uvo",
  "version": "2.3.1",
  "description": "JavaScript Universal Single Object Validator",
  "main": "./dist/umd/index.js",
  "module": "./dist/es/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn run lint --fix",
    "test": "jest --config ./jest.config.json",
    "test:watch": "yarn run test --watch",
    "build": "yarn run build:merge && yarn run build:modules && yarn run build:minify && yarn run build:doc",
    "build:merge": "concurrently \"yarn run build:merge:lib\" \"yarn run build:merge:compiler\"",
    "build:merge:lib": "node merge-sources.js merge-config.json && node build-doc.js ./dist/index.ts",
    "build:merge:compiler": "node merge-sources.js compiler-merge-config.json",
    "build:modules": "concurrently \"yarn run build:umd\" \"yarn run build:es\" \"yarn run build:compiler\" \"yarn run build:types\"",
    "build:minify": "concurrently \"yarn run build:umd-min\" \"yarn run build:es-min\" \"yarn run build:compiler-min\"",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:umd-min": "terser --config-file ./terser.config.json -o ./dist/umd/index.min.js -- ./dist/umd/index.js",
    "build:es": "tsc -p tsconfig.es.json",
    "build:es-min": "terser --config-file ./terser.config.json -o ./dist/es/index.min.js -- ./dist/es/index.js && node const-to-let.js ./dist/es/index.min.js",
    "build:compiler": "tsc -p tsconfig.compiler.json",
    "build:compiler-min": "terser --config-file ./terser.config.json -o ./compiler/index.js -- ./compiler/index.compiler.js && node const-to-let.js ./compiler/index.js",
    "build:types": "tsc -p tsconfig.types.json",
    "build:doc": "node generate-markdown.js README.md && doctoc README.md --github",
    "predeploy": "yarn run lint && yarn run test && yarn run build"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MasterSais/uvo.git"
  },
  "files": [
    "dist/es",
    "dist/types",
    "dist/umd",
    "compiler/index.js"
  ],
  "keywords": [
    "es6",
    "es2015",
    "uvo",
    "js",
    "ts",
    "typescript",
    "nodejs",
    "validator",
    "validation"
  ],
  "author": "Yauheni Zhestiannikau (MasterSais) <evgensvvv@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/MasterSais/uvo",
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "13.9.5",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "concurrently": "5.1.0",
    "doctoc": "1.4.0",
    "eslint": "6.8.0",
    "jest": "25.2.4",
    "terser": "4.6.7",
    "ts-jest": "25.3.0",
    "typescript": "3.8.3"
  },
  "typings": "./dist/types/index.d.ts"
}
