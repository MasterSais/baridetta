{
  "name": "uvo",
  "version": "2.4.0",
  "description": "JavaScript Universal Single Object Validator",
  "main": "./dist/umd/index.js",
  "module": "./dist/es/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn run lint --fix",
    "test": "jest --config jest.config.json",
    "post-test": "jest --config post-jest.config.json",
    "test:watch": "yarn run test --watch",
    "build": "yarn run build:merge && yarn run build:modules && yarn run build:minify && yarn run build:doc",
    "build:merge": "concurrently \"yarn run build:merge:lib\" \"yarn run build:merge:template\"",
    "build:merge:lib": "node config/merge-sources.js config/merge-config.json && node config/build-doc.js ./dist/index.ts",
    "build:merge:template": "node config/merge-sources.js config/template-merge-config.json",
    "build:modules": "concurrently \"yarn run build:umd\" \"yarn run build:es\" \"yarn run build:template\" \"yarn run build:types\"",
    "build:minify": "concurrently \"yarn run build:umd-min\" \"yarn run build:es-min\" \"yarn run build:template-min\"",
    "build:umd": "tsc -p config/tsconfig.umd.json",
    "build:umd-min": "terser --config-file config/terser.config.json -o ./dist/umd/index.min.js -- ./dist/umd/index.js",
    "build:es": "tsc -p config/tsconfig.es.json",
    "build:es-min": "terser --config-file config/terser.config.json -o ./dist/es/index.min.js -- ./dist/es/index.js && node config/const-to-let.js ./dist/es/index.min.js",
    "build:template": "tsc -p config/tsconfig.template.json",
    "build:template-min": "terser --config-file config/terser.config.json -o ./template/index.js -- ./template/index.template.js && node config/const-to-let.js ./template/index.js",
    "build:types": "tsc -p config/tsconfig.types.json",
    "build:doc": "node config/generate-markdown.js README.md && doctoc README.md --github",
    "predeploy": "yarn run lint && yarn run build && yarn run post-test"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MasterSais/uvo.git"
  },
  "files": [
    "dist/es",
    "dist/types",
    "dist/umd",
    "template/index.js"
  ],
  "keywords": [
    "es6",
    "es2015",
    "uvo",
    "js",
    "ts",
    "typescript",
    "nodejs",
    "validator",
    "validation"
  ],
  "author": "Yauheni Zhestiannikau (MasterSais) <evgensvvv@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/MasterSais/uvo",
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.8",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "babel-jest": "25.2.4",
    "concurrently": "5.1.0",
    "doctoc": "1.4.0",
    "eslint": "6.8.0",
    "jest": "25.2.4",
    "terser": "4.6.9",
    "typescript": "3.8.3"
  },
  "typings": "./dist/types/index.d.ts"
}
