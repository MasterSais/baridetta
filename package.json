{
  "name": "uvo",
  "version": "4.0.0",
  "description": "JavaScript Universal Validation Library",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "unpkg": "./dist/esm/index.min.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "test": "jest --config jest.config.json",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "test:post": "jest --config post-jest.config.json",
    "build": "yarn build:merge && rollup -c rollup.config.js && yarn build:doc",
    "build:merge": "node config/merge-sources && node config/inline-docs",
    "build:doc": "yarn build:doc:api && yarn build:doc:main",
    "build:doc:api": "node config/prepare-api-doc API.md",
    "build:doc:main": "node config/prepare-main-doc docs/main.md README.md API.md",
    "predeploy": "yarn lint:fix && yarn build && yarn test:post"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/MasterSais/uvo.git"
  },
  "files": [
    "dist",
    "template",
    "extended",
    "es5",
    "extended-template"
  ],
  "keywords": [
    "es5",
    "es6",
    "es2015",
    "uvo",
    "js",
    "ts",
    "typescript",
    "nodejs",
    "validator",
    "templating",
    "validation",
    "async"
  ],
  "author": "Yauheni Zhestiannikau (MasterSais) <evgensvvv@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/MasterSais/uvo",
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-typescript": "7.10.1",
    "@rollup/plugin-typescript": "4.1.2",
    "@types/jest": "26.0.0",
    "@types/node": "14.0.13",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "babel-jest": "26.0.1",
    "eslint": "7.2.0",
    "jest": "26.0.1",
    "rollup": "2.16.1",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-terser": "6.1.0",
    "rollup-plugin-typescript2": "0.27.1",
    "terser": "4.8.0",
    "tslib": "2.0.0",
    "typescript": "3.9.5"
  },
  "typings": "./dist/index.d.ts"
}